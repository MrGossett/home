Host jump.aws.*
	User ec2-user
	ProxyCommand bash -c 'host=$(h=%h; aws ec2 describe-instances --filters Name=tag:Name,Values=${h##*.} --query "Reservations[].Instances[0].PrivateDnsName" --output text); echo "ssh %r@$host" >&2; ssh %r@$host'
Host *.ec2.internal
	Compression no
	ForwardAgent no
	IdentitiesOnly yes
	IdentityFile ~/.ssh/id_rsa.pem
	CheckHostIP no
	ProxyCommand bash -c 'host=$(aws elb describe-load-balancers --load-balancer-names "bastion-elb" --query "LoadBalancerDescriptions[].DNSName" --output text); echo "nc $host %p" >&2; nc $host %p'
	HostKeyAlias jump
	ForwardAgent yes
	ControlPersist 55s
Host bitbucket.org
	ConnectTimeout 60
	ControlMaster no
	ControlPath none
Host *
	ConnectTimeout 30
	AddKeysToAgent yes
	StreamLocalBindUnlink yes
	ControlMaster auto
	ControlPersist 8h
	ControlPath /tmp/.ssh_control-%h-%p-%r
	Compression yes
	UseKeychain yes
