[user]
	name = Tim Gossett
	signingkey = 0x7666BDAF!
	email = tim@mrgossett.com

[core]
	editor = vim
	autocrlf = input ; don't mess with line endings
	hooksPath = ~/.config/git/hooks ; use global hooks

	; pull in global excludes. ignores Vim swap files
	excludesfile = ~/.config/git/excludes

[merge]
	tool = vim ; use vim to resolve merge conflicts

[commit]
	template = ~/.gitmessage ; template for commit messages
	gpgSign = true ; always GPG sign commits

[fetch]
	prune = true

[alias]
	a = add
	c = commit -v
	co = checkout
	d = diff
	ds = diff --staged
	s = status
	secrets = git-secrets
	crypt = git-crypt

[secrets]
	providers = git secrets --aws-provider
	patterns = [A-Z0-9]{20}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

[status]
	submoduleSummary = true

[diff]
	submodule = log

; if the GIT_DIR is under /Users, we're probably on an OS X system
[includeIf "gitdir:/Users/"]
	path = ~/.config/git/config.osx

; if the GIT_DIR is directly under HOME, include mrgossett config
[includeIf "gitdir:~/.git"]
	path = ~/.config/git/config.mrgossett

; if the GIT_DIR has mrgossett in its path, include mrgossett config
[includeIf "gitdir/i:mrgossett/"]
	path = ~/.config/git/config.mrgossett

; if the GIT_DIR has green in its path, include green config
[includeIf "gitdir:green/"]
	path = ~/.config/git/config.green
;
; if the GIT_DIR has grey in its path, include grey config
[includeIf "gitdir:grey/"]
	path = ~/.config/git/config.grey

[tag]
	forceSignAnnotated = true

[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	default = current
